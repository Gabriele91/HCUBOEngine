parameters
{
    mask float(0.0)
    diffuse_map texture("white")
	color vec4(1.0,1.0,1.0,1.0)
}

technique "forward"
{
	pass 
	{
		zbuffer less
		blend off
		cullface back
		lights 8
		shader source 
		{
			const int MAX_LIGHTS = 8;
			#pragma import "lib/base_texture.glsl"
		}
	}
}

technique "deferred"
{
	pass 
	{
		zbuffer less
		blend off
		cullface back
		shader source
		{
			#define DEFERRED_RENDERING
			#pragma import "lib/base_texture.glsl"
		}
	}
}