parameters
{
    mask float(0.0)
    diffuse_map texture("white")
    specular_map texture("black")
	color vec4(1.0,1.0,1.0,1.0)
}

technique "forward"
{
	pass 
	{
		zbuffer less
		blend off
		cullface back
		lights 32
		shader source 
		{
			#pragma import "lib/base_texture_specular.glsl"
		}
	}
}

technique "deferred"
{
	pass 
	{
		zbuffer less
		blend off
		cullface back
		shader source
		{
			#define DEFERRED_RENDERING
			#pragma import "lib/base_texture_specular.glsl"
		}
	}
}